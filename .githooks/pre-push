#!/bin/sh

# Reject pushes unless current month is May, unless FORCE_PUSH=1
MONTH=$(date +%m)

if [ "${FORCE_PUSH}" = "1" ]; then
  exit 0
fi

if [ "${MONTH}" != "05" ]; then
  echo "[pre-push] 今は5月ではありません。pushは禁止されています。" 1>&2
  echo "[pre-push] どうしても push する場合は 'FORCE_PUSH=1 git push' を使ってください。" 1>&2
  exit 1
fi

exit 0

